@{
}

@model List<RentACar.Models.Cliente>;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Clientes</h2>
        <a asp-controller="Cliente" asp-action="Nuevo" class="btn btn-primary mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Cédula</th>
                    <th>Num. tarjeta de crédito</th>
                    <th>Tipo de persona</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Cedula</td>
                        <td>@item.NumTarjetaCredito</td>
                        <td>@item.TipoPersona</td>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-controller="Cliente" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-success">Editar</a>
                            <a asp-controller="Cliente" asp-action="Eliminar" asp-route-Id="@item.Id" onclick="return confirmar()" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmar() {
            return confirm("¿Estás seguro de eliminar este cliente?")
        }
    </script>
}