@model RentACar.Models.Cliente

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar cliente</h2>
        <form asp-controller="Cliente" asp-action="Editar" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label>Nombre completo</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Cédula</label>
                <input class="form-control" asp-for="Cedula" type="text" />
            </div>
            <div class="mb-3">
                <label>Número de la tarjeta de crédito</label>
                <input class="form-control" asp-for="NumTarjetaCredito" type="text" />
            </div>
            <div class="mb-3">
                <label>Tipo de persona</label>
                <select class="form-control" asp-for="TipoPersona" asp-items="ViewBag.TipoPersona"></select>
            </div>
            <div class="mb-3">
                <label>Estado</label>
                <select class="form-control" asp-for="Estado" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Cliente" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>