@{
}

@model List<RentACar.Models.Vehiculo>;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Tipos de vehículos</h2>
        <a asp-controller="Vehiculo" asp-action="Nuevo" class="btn btn-primary mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Número de chasis</th>
                    <th>Motor</th>
                    <th>Placa</th>
                    <th>Tipo</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Combustible</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descripcion</td>
                        <th>@item.NumChasis</th>
                        <th>@item.Motor</th>
                        <th>@item.NumPlaca</th>
                        <th>@item.TipoVehiculo.Descripcion</th>
                        <th>@item.Marca.Descripcion</th>
                        <th>@item.Modelo.Descripcion</th>
                        <th>@item.TipoCombustible.Descripcion</th>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-controller="Vehiculo" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-success">Editar</a>
                            <a asp-controller="Vehiculo" asp-action="Eliminar" asp-route-Id="@item.Id" onclick="return confirmar()" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmar() {
            return confirm("¿Estás seguro de eliminar este tipo de vehículo?")
        }
    </script>
}