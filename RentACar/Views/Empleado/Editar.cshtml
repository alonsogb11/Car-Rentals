@model RentACar.Models.Empleado;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar empleado</h2>
        <form asp-controller="Empleado" asp-action="Editar" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label>Nombre completo</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Cédula</label>
                <input class="form-control" asp-for="Cedula" type="text" />
            </div>
            <div class="mb-3">
                <label>Tanda en la que labora</label>
                <select class="form-control" asp-for="TandaLabor" asp-items="ViewBag.TandaLabor"></select>
            </div>
            <div class="mb-3">
                <label>Comisión por venta</label>
                <input class="form-control" asp-for="PorcientoComision" type="text" />
            </div>
            <div class="mb-3">
                <label>Fecha de contratación</label>
                <input class="form-control" asp-for="FechaContratacion" type="datetime" />
            </div>
            <div class="mb-3">
                <label>Estado</label>
                <select class="form-control" asp-for="Estado" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Empleado" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>