@{
}

@model RentACar.Models.TipoVehiculo;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo tipo de vehículo</h2>
        <form asp-controller="TipoVehiculo" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Descripción</label>
                <input class="form-control" asp-for="Descripcion" type="text"/>
            </div>
            <div class="mb-3">
                <label>Estado</label>
                <select class="form-control" asp-for="Estado" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="TipoVehiculo" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>