@{
}

@model List<RentACar.Models.TipoVehiculo>;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Tipos de vehículos</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Estado</td>
                        <td>
                            @* <a>Eliminar</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>