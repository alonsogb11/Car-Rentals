@{
}

@model List<RentACar.Models.TipoCombustible>;

<div class="row">
    <div class="col">
        <h2>Tipos de combustibles</h2>
        <a asp-controller="TipoCombustible" asp-action="Nuevo" class="btn btn-primary mb-3">Nuevo</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-controller="TipoCombustible" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-success">Editar</a>
                            <a asp-controller="TipoCombustible" asp-action="Eliminar" asp-route-Id="@item.Id" onclick="return confirmar()" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmar() {
            return confirm("¿Estás seguro de eliminar este tipo de combsutible?")
        }
    </script>
}